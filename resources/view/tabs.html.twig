<div class="topbar discounts">
	<ul class="tabs">
		{% for name, url in tabs %}
			<li class="{{ name == current ? 'active' : '' }}"><a href="{{ url }}" data-live>{{ name }}</a></li>
		{% endfor %}
	</ul>
</div>

<div class="controls">
    <form action="{{ url('ms.discount.delete', {discountID: discountID}) }}" method="post" id="delete-page">
        <input type="hidden" name="_method" value="DELETE">
        <button name="delete[delete]" value="delete" id="delete" type="submit" class="button small delete">{{ 'Delete'|trans }}</button>
    </form>
</div>
